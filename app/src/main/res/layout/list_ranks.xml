<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgrund_img_border">

    <TextView
        android:id="@+id/lst_ranks_txt_Rank_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_button_style_rounded"
        android:text="1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/lst_ranks_Full_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/lst_ranks_txt_Rank_Number"
        android:background="@drawable/edittext_button_style_rounded"
        android:text="Full Name Here"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lst_ranks_txt_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lst_ranks_Full_Name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/lst_ranks_txt_Rank_Number"
        android:text="Address Here:" />

    <TextView
        android:id="@+id/lst_ranks_txt_Reg_Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lst_ranks_txt_Address"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/lst_ranks_txt_Rank_Number"
        android:text="Total Registrations Here:" />
</RelativeLayout>