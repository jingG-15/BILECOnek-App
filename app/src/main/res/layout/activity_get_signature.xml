<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.act_Get_Signature">

    <com.google.android.gms.ads.AdView
        android:id="@+id/bannerAdView_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id_AGMA_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.kyanogen.signatureview.SignatureView
        android:id="@+id/sig_sign_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:foreground="@drawable/background_spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Please type your signature.\n(Will strictly be used for registration reporting purposes)."
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerAdView_5" />

    <ImageView
        android:id="@+id/sig_imgbtn_save_sig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/imgbutton_background"
        app:layout_constraintEnd_toEndOf="@+id/sig_sign_view"
        app:layout_constraintTop_toTopOf="@+id/sig_sign_view"
        app:srcCompat="@drawable/ic_baseline_done_outline_24" />

    <ImageView
        android:id="@+id/sig_imgbtn_clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/imgbutton_background"
        app:layout_constraintStart_toStartOf="@+id/sig_sign_view"
        app:layout_constraintTop_toTopOf="@+id/sig_sign_view"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <ImageView
        android:id="@+id/sig_imgbtn_browse_signature"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/imgbutton_background"
        app:layout_constraintStart_toEndOf="@+id/sig_imgbtn_clear"
        app:layout_constraintTop_toTopOf="@+id/sig_sign_view"
        app:srcCompat="@drawable/ic_baseline_folder_open_24" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Clear"
        android:textColor="@color/yellow_700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sig_imgbtn_clear"
        app:layout_constraintStart_toStartOf="@+id/sig_imgbtn_clear"
        app:layout_constraintTop_toBottomOf="@+id/sig_imgbtn_clear" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Browse"
        android:textColor="@color/yellow_700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sig_imgbtn_browse_signature"
        app:layout_constraintStart_toStartOf="@+id/sig_imgbtn_browse_signature"
        app:layout_constraintTop_toBottomOf="@+id/sig_imgbtn_browse_signature" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/yellow_700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sig_imgbtn_save_sig"
        app:layout_constraintStart_toStartOf="@+id/sig_imgbtn_save_sig"
        app:layout_constraintTop_toBottomOf="@+id/sig_imgbtn_save_sig" />


</androidx.constraintlayout.widget.ConstraintLayout>