        <activity android:name=".Activities.act_Get_Offline_Signature" />
        <activity android:name=".Activities.act_Fullview_Rankings" />
        <activity android:name=".Activities.act_QR_Attendance_Onsite" />
        <activity android:name=".Activities.act_Admin_Registration_Stats" />
        <activity android:name=".Activities.act_Search_Registered_Logged" />
        <activity android:name=".Activities.act_Manual_Search_Selection" />
        <activity android:name=".Activities.act_Search_by_Name" />
        <activity android:name=".Activities.act_Privacy_Policy" />
        <activity android:name=".Activities.act_Statistics" />
        <activity
            android:name=".Activities.act_Logging_User"
            android:label="@string/Login_Label"
            android:theme="@style/Theme.BILECOAGMAOnlineRegistration2021Dialog" />
        <activity
            android:name=".Activities.act_Main_Menu"
            android:theme="@style/splashScreenTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Include the AdActivity configChanges and theme. -->
        <activity android:name=".Activities.act_Contact_Number" />
        <activity android:name=".Activities.act_Generate_QR_Stub" />
        <activity android:name=".Activities.act_Photo_ID" />
        <activity android:name=".Activities.act_Get_Signature" />
        <activity android:name=".Activities.act_Display_For_Reg" />
        <activity
            android:name=".Activities.act_Barcode_Scan_Reg"
            android:screenOrientation="sensorPortrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            tool:replace="android:screenOrientation" />
        <activity android:name=".Activities.act_Search_by_Account_Number" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2262826848290210~3870915298" />
    </application>

</manifest>